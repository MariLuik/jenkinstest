pipeline{
    agent any
      triggers {
         githubPush()
         }
    stages{
        stage("Build"){
            steps{
                echo "Building the code using Mn"
            }
              post{
                success{
                    mail to: "mariluik@gmail.com",
                    subject: "GIT and integration test status Email",
                    body: "GIT and integration testing has been successfully completed!"
                }
     
            }
        }
    }
}
